{
  "BitmapFont": {
    "default-font": { "file": "fonts/ui_font_32.fnt" },
    "small-font": { "file": "fonts/SDS_6x6_small.fnt" },
    "hud-font": { "file": "fonts/hudFont.fnt"}
  },
  "Color": {
    "white": {
      "a": 1,
      "b": 1,
      "g": 1,
      "r": 1
    },
    "black": {
      "a": 1,
      "b": 0,
      "g": 0,
      "r": 0
    },
    "gray": {
      "a": 1,
      "b": 0.5,
      "g": 0.5,
      "r": 0.5
    }
  },
  "TextButtonStyle": {
    "default": {
      "down": "clickedBtn",
      "up": "unClickedBtn",
      "font": "default-font",
      "fontColor": "black",
      "downFontColor": "white",
      "overFontColor": "gray"
    },
    "readOnly": {
      "up": "clickedBtn",
      "font": "default-font",
      "fontColor": "black"
    }
  },
  "LabelStyle": {
    "default":
    {
      "font": "hud-font",
      "fontColor": "black"
    }

    "title":
    {
      "font": "hud-font",
      "fontColor": "black"
    }
  },
  "CheckBoxStyle": {
    "default": {
      "down": "clickedBtn",
      "up": "unClickedBtn",
      "checkboxOn": "RadioBtnFill",
      "checkboxOff": "RadioBtnEmpty",
      "font": "default-font",
      "fontColor": "black",
      "downFontColor": "black",
      "overFontColor": "gray"
    }
  },
  "ButtonStyle":
  {
    "pause":{
      "up":"VolBtn",
      "down":"VolBtn"
    }
  }
}